{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "outDir": "dist",
    // "sourceMap": true,
    "module": "esnext",
    "strict": true,

    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    //"strictPropertyInitialization": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,

    "pretty": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "useUnknownInCatchVariables": false,
    "paths": {
      "@apps/dashboard/stores/*": ["src/apps/dashboard/stores/*"],
      "@apps/dashboard/components/*": ["src/apps/dashboard/components/*"],
      "@apps/dashboard/layouts/*": ["src/apps/dashboard/layouts/*"],
      "@apps/dashboard/pages/*": ["src/apps/dashboard/pages/*"],
      "@apps/dashboard/assets/*": ["src/apps/dashboard/assets/*"],
      "@apps/dashboard/boot/*": ["src/apps/dashboard/boot/*"],
      "@apps/dashboard/src/*": ["src/apps/dashboard/*"],
      "@apps/dashboard/*": ["src/apps/dashboard/*"],

      "@apps/control-hub/stores/*": ["src/apps/controlHub/stores/*"],
      "@apps/control-hub/components/*": ["src/apps/controlHub/components/*"],
      "@apps/control-hub/layouts/*": ["src/apps/controlHub/layouts/*"],
      "@apps/control-hub/pages/*": ["src/apps/controlHub/pages/*"],
      "@apps/control-hub/assets/*": ["src/apps/controlHub/assets/*"],
      "@apps/control-hub/boot/*": ["src/apps/controlHub/boot/*"],
      "@apps/control-hub/src/*": ["src/apps/controlHub/*"],
      "@apps/control-hub/*": ["src/apps/controlHub/*"],

      "@apps/studio/stores/*": ["src/apps/studio/stores/*"],
      "@apps/studio/components/*": ["src/apps/studio/components/*"],
      "@apps/studio/layouts/*": ["src/apps/studio/layouts/*"],
      "@apps/studio/pages/*": ["src/apps/studio/pages/*"],
      "@apps/studio/assets/*": ["src/apps/studio/assets/*"],
      "@apps/studio/boot/*": ["src/apps/studio/boot/*"],
      "@apps/studio/src/*": ["src/apps/studio/*"],
      "@apps/studio/*": ["src/apps/studio/*"],
      "@apps/desktop/*": ["src/apps/Desktop/*"],
      "@apps/control-panel-common/assets/*": [
        "src/apps/controlPanelCommon/assets/*"
      ],
      "@apps/control-panel-common/*": ["src/apps/controlPanelCommon/*"],
      "@apps/control-panel-common/src/*": ["src/apps/controlPanelCommon/*"],
      "src/*": ["src/*"],
      "layouts/*": ["src/layouts/*"],
      "@apps/profile/src/*": ["src/*"],
      "@apps/profile/stores/*": ["src/stores/*"],
      "@apps/market/src/*": ["src/*"],
      "@apps/market/stores/*": ["src/stores/*"],
      "src/containers": ["src/containers/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/apps/**/*.vue",
    "types/**/*.ts",
    "src/did/did-key.ts",
    "src/pages/Items/totp.vue",
    "src/i18n/en-US/index.ts",
    "src/i18n/zh-CN/index.ts",
    "src/pages/Plugin"
  ],
	"typeRoots": ["./node_modules/@types", "./src/types"],
  "exclude": ["node_modules/**/*.ts", "src/apps/studio/stores/**/*.ts"]
}
